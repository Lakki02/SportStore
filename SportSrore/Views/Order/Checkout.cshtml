@model SportSrore.Models.Order

<h2>Check out new</h2>
<p>Please enter you details, and we'll ship you good right away!</p>
<div asp-validation-summary="All" class="text-danger"></div>
<form asp-action="Checkout" method="post">
    <h3>Ship to</h3>
    <div class="col-12">
        <label class="form-label">Name:</label><input asp-for="Name" class="form-control"/>
    </div>
    <div class="col-12">
        <label class="form-label">Line1:</label><input asp-for="Line1" class="form-control"/>
    </div>
    <div class="col-12">
        <label class="form-label">Line2:</label><input asp-for="Line2" class="form-control"/>
    </div>
    <div class="col-12">
        <label class="form-label">Line3:</label><input asp-for="Line3" class="form-control"/>
    </div>
    <div class="col-12">
        <label class="form-label">City:</label><input asp-for="City" class="form-control"/>
    </div>
    <div class="col-12">
        <label class="form-label">State:</label><input asp-for="State" class="form-control"/>
    </div>
    <div class="col-12">
        <label class="form-label">Zip:</label><input asp-for="Zip" class="form-control"/>
    </div>
    <div class="col-12">
        <label class="form-label">Country:</label><input asp-for="Country" class="form-control"/>
    </div>
    <h3>Options</h3>
    <div class="form-check">
        <label class="form-check-label">
            <input asp-for="GiftWrap" class="form-check-input"/>Gift wrap these item
        </label>
    </div>
    <div class="text-center">
        <input class="btn btn-primary" type="submit" value="Complete Order"/>
    </div>
</form>
